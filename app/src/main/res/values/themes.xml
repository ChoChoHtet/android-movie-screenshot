<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Screen_capture" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Theme.Screen_capture.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Screen_capture.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Screen_capture.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="DialogTheme" parent="Theme.Screen_capture">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="MovieStatusTheme"  >
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:paddingStart">@dimen/spacing_normal</item>
        <item name="android:paddingEnd">@dimen/spacing_small</item>
        <item name="android:paddingTop">@dimen/spacing_tiny</item>
        <item name="android:paddingBottom">@dimen/spacing_small</item>
    </style>
    <style name="MovieTitleTheme"  >
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/spacing_normal</item>
        <item name="android:paddingEnd">@dimen/spacing_small</item>
        <item name="android:paddingBottom">@dimen/spacing_small</item>
    </style>
    <style name="CardViewShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>